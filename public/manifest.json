{
  "manifest_version": 2,

  "name": "Quotable",
  "description": "Save your favorite quotes!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Quotable",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["popup.js", "server.js"],
      "css": ["lib/styles.css"],
      "matches": ["http://*/*","https://*/*"]
    }
  ],
  "permissions": [
  ],
  "background": {
  }
}
