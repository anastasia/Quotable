// $swatchMain         = #c6ffff
$swatchMain         = #8cd7f7
$swatchNeutralDark  = #646464
$swatchNeutralLight = #cecbc6

$fontMain           = "BrandonText-Medium"
$fontColorMain      = $swatchNeutralDark

// reset
button
 cursor : pointer
input, button, textarea
  border        : none
  box-shadow    : none
  border-radius : 0px

  &:focus
    outline: none
body
  font-family: $fontMain
::-webkit-input-placeholder
  color: #fff
:-moz-placeholder
  color: #fff
::-moz-placeholder
  color: #fff
:-ms-input-placeholder
  color: #fff

.main-header
  width            : 172px
  height           : 172px
  font-family      : "BrandonGrotesque-Medium"
  font-size        : 120px
  color            : white
  background-color : $swatchMain

  .content
    padding : 10px
    margin  : 0 auto

.home-content
  width    : 100%
  height   : 100%
  .sidebar
    width  : 20%
    height :100%
    float  : left
    border-right : 2px dotted $swatchNeutralDark
  .main-view
    width  : 79%
    height :100%
    float  : right

// NEWQUOTE
.new-quote
  width   : 94.2%
  padding : 10px 20px
  border  : 2px solid $swatchNeutralLight
  .header
    color : $swatchNeutralLight
    font-family : "BrandonText-MediumItalic"
    font-size : 12px
  .field
    padding-left: 10px
    font-size        : 35px
    color : $swatchNeutralDark
    width: 100%
    background-color : $swatchNeutralLight
    margin-bottom: 10px
  .field-small
    height: 50px
  .field-big
    height 150px
  .submit
    width : 100%
    height : 50px
// NAVBAR
.navbar
  width  : 100%
  height : 60px
  background-color : $swatchMain
  input.searchbar
    width            : 80%
    height           : 100%
    font-size        : 35px
    font-family      : "BrandonText-Medium"
    background-color : $swatchMain
    color            : #fff
    padding-left     : 10px
    border-right : 2px dotted white

  .add-quote-btn
    float              : right
    background         : url("/assets/plus.png") no-repeat
    width              : 40px
    height             : 40px
    margin-top         : 8px
    margin-right       : 10px
    -webkit-transition : -webkit-transform .8s ease-in-out
    -ms-transition     : -ms-transform .8s ease-in-out
    transition         : transform .8s ease-in-out
    &:hover
      transform         :rotate(360deg)
      -ms-transform     :rotate(360deg)
      -webkit-transform :rotate(360deg)
    &.clicked
      transform         :rotate(-405deg)
      -ms-transform     :rotate(-405deg)
      -webkit-transform :rotate(-405deg)

  .clear-btn
    float      : right
    background : url("/assets/delete-icon.png") no-repeat
    width      : 40px
    height     : 40px



// QUOTES
.quote-list-container
  display         : flex
  flex-direction  : row
  flex-wrap       : wrap
  justify-content : flex-end
  .single-quote
    width            : 28%
    height           : 212px
    margin           : 5px
    background-color : $swatchMain
    font-family      : $fontMain
    color            : $fontColorMain
    font-size        : 14px
    padding : 13px
    .content
      overflow : hidden
      height   : 100%
      width    : 100%
    .tags
      width : 100%
    .tag
      padding          : 5px
      background-color : #ededed
      color            : gray
      margin-right     : 3px
    &.in-focus
      width : 100%
      font-size : 20px
      background-color : red

// TAGS
.tags-list-container
  width       : 100px
  font-family : "BrandonText-Medium"
  font-size   : 12px
  color       : $fontColorMain
  .tags-header
    font-family: "BrandonText-Bold"
  .tag
    padding: 5px
    cursor : pointer
    background-color: #ededed
    a:hover
      color: blue
    &.selected
      background-color: blue



