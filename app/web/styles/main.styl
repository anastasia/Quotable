$fontMain       = "BrandonText-Medium"
$swatchMain     = #8cd7f7
$fontColorMain  = #646464

// reset
input
  border : none
  box-shadow       : none
  border-radius    : 0px

  &:focus
    outline: none

::-webkit-input-placeholder
  color: #fff
:-moz-placeholder
  color: #fff
::-moz-placeholder
  color: #fff
:-ms-input-placeholder
  color: #fff

.main-header
  width            : 172px
  height           : 172px
  font-family      : "BrandonGrotesque-Medium"
  font-size        : 120px
  color            : white
  background-color : $swatchMain

  .content
    padding : 10px
    margin  : 0 auto

.home-content
  width    : 100%
  height   : 100%
  .sidebar
    width  : 20%
    height :100%
    float  : left
  .main-view
    width  : 80%
    height :100%
    float  : right


// NAVBAR
.navbar
  width  : 100%
  height : 60px
  background-color : $swatchMain
  input.searchbar
    width            : 100%
    height           : 100%
    font-size        : 35px
    font-family      : "BrandonText-Medium"
    background-color : $swatchMain
    color            : #fff
    padding-left     : 10px


  .add-quote-btn
    float  : right
    background : url("/assets/plus.png") no-repeat
    background-size  : 40px 40px

// QUOTES
.quote-list-container
  max-width       : 72%
  display         : flex
  flex-direction  : row
  flex-wrap       : wrap
  justify-content : flex-end
  .single-quote
    width            : 165px
    height           : 212px
    margin           : 5px
    background-color : $swatchMain
    font-family      : $fontMain
    color            : $fontColorMain
    font-size        : 14px
    .content
      overflow : hidden
      height   : 100%
      width    : 100%
    .tags
      width : 100%
    .tag
      padding          : 5px
      background-color : #ededed
      color            : gray
      margin-right     : 3px

// TAGS
.tags-list-container
  width       : 100px
  font-family : "BrandonText-Medium"
  font-size   : 12px
  color       : $fontColorMain
  .tags-header
    font-family: "BrandonText-Bold"
  .tag
    padding: 5px
    cursor : pointer
    background-color: #ededed
    a:hover
      color: blue
    &.selected
      background-color: blue
