// NAVBAR
@import 'nib'

.navbar
  overflow: hidden
  width: 100%
  .selected-tags
    padding-top : 8px
    clear : both
  .selected-tag
    display        : inline-block
    font-size      : 35px
    font-family    : $fontSerif
    text-transform : uppercase
    border         : 1px solid black
    padding        : 5px
    height : 44px
    margin-right : 5px

    &.one
      background-color : $swatchGreen
    &.two
      background-color : $swatchYellow
    &.three
      background-color : $swatchRed
    &.four
      background-color : $swatchGray
    &.five
      background-color : $swatchGreenLight

    .delete-btn
      display: none
      position : absolute
      top : -2px
    &:hover .delete-btn
      display : inline-block
    span.content
      top     : -10px
      position: relative
  .searchbar-container
    overflow : hidden
  .btn-container
    float : right
    :last-child
      margin-right     : 0px

  input.searchbar
    width          : 100%
    height         : 44px
    font-size      : 30px
    font-family    : $fontSerif
    border         : 1px solid black
    color          : black
    text-transform : uppercase
    float  : left
    padding-left     : 10px

  .nav-btn
    float            : left
    width            : 44px
    height           : 44px
    border           : 1px solid black
    background-color : white
    padding          : 9px
    margin-left      : -1px
    margin-right     : 10px

    .plus-icon
      background         : url("/assets/add-icon.svg") no-repeat
      width : 22px
      height : 22px
      -webkit-transition : -webkit-transform 2s ease-in-out
      -ms-transition     : -ms-transform 2s ease-in-out
      transition         : transform 2s ease-in-out

    &:hover .plus-icon
      transform         :rotate(360deg)
      -ms-transform     :rotate(360deg)
      -webkit-transform :rotate(360deg)
    &.clicked .plus-icon
      transform         :rotate(-405deg)
      -ms-transform     :rotate(-405deg)
      -webkit-transform :rotate(-405deg)
    &:hover
      background-color: $swatchYellow
    .lookup-icon
      background : url("/assets/lookup2.svg") no-repeat
      width : 22px
      height : 22px

  .clear-btn
    float      : right
    background : url("/assets/delete-icon.png") no-repeat
    width      : 40px
    height     : 40px
