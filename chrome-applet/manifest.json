{
  "manifest_version": 2,

  "name": "verser",
  "description": "Save your favorite verses and quotes!",
  "version": "1.0",

  "browser_action": {
    "default_icon": "calculator-16.png",
    "default_title": "verser",
    "default_popup": "verser.html"
  },
  "permissions": [
    "tabs",
    "http://localhost/*",
    "http://*/*",
    "https://*/*",
    "storage"
  ],
  "content_scripts": [ {
    "js": [ "jquery-2.1.4.min.js", "background.js" ],
    "matches": [ "http://*/*", "https://*/*"]
  }],
  "background": {
       "scripts": ["background.js"]
    }
}
